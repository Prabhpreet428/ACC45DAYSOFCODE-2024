#include <stdio.h>
int max(int x, int y) {
    return (x>y) ? x:y;
    int main(){
    int t;
    printf("number of test cases");
    scanf("%d",&t);
    while(t--){
        int a,b,c,d;
        scanf("%d %d %d %d",&a,&b,&c,&d);
        int max_tastiness = max(a,b) + max(c+d);
        printf("%d\n",max_tastiness);
    }
    return 0;
}
}
